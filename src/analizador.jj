//Cadenas
TOKEN : {<IDENTIFIER: ["a"-"z","A"-"Z"](["a"-"z","A"-"Z","0"-"9","?","_","-"])+>}
TOKEN: {<VAR_DECLARATION: ["a"-"z","A"-"Z"](["a"-"z","A"-"Z","0"])+>}
TOKEN : {<STRING: (["a"-"z","A"-"Z","0"-"9","¿","?","¡","!","#","=","+","-","*","/","(",")","[","]","@",":","."])+>}
TOKEN : {<NUMBER: ["-"]((["0"-"9"])+|(["0"-"9"])+"."(["0"-"9"])+)>}


void String():
{}
{
    <QUOTE><STRING>[(Interpolacion())+]<QUOTE>
}
void Params():
{}
{
    /***
    * miFuncion(param1[,param2,...])
    */
    <LPAREN><VAR_DECLARATION>[(<COMMA><VAR_DECLARATION>)+]<RPAREN>
}
void Interpolacion():
{}
{
    //Operaciones()
    <CAT><LBRACE>(<IDENTIFIER>[Params()]|<VAR_DECLARATION>)<RBRACE>
}
void Array():
{}
{
    <LBRACKET>[(<VAR_DECLARATION>|<NIL>|<STRING>|<NUMBER>|<TRUE>|<FALSE>)]<RBRACKET>
}
void Start():
{}
{
    /**
    * Las funciones van primero que las instrucciones del programa, se pueden definir las funciones que el usuario desee
    * def functionName(params+)
    *   //Code
    * end
    * Code
    */
    (Function())+|
    (Code())+
    <END>
}
void Function():
{}
{
    <DEF><IDENTIFIER><LineBreak>
        Code()
    <END><LineBreak>
}
void Code():
{}
{
    Variables()|
    //If()|
    For()|
    Puts()
    //Gets()
}
void Variables():
{}
{
    /***
    * variable = 0 | variable = "" | variable = nil | variable = false | variable = variable2
    *
    */
    <VAR_DECLARATION><ASIGNATION>((<NUMBER>|String()|<NIL>|<TRUE>|<FALSE>|<VAR_DECLARATION>)|
    /***
    * variable = functionName | variable = functionName(param1, ...)
    */
    (<IDENTIFIER>[Params()])|
    /***
    * variable = [] | variable = [var1, nil, 2, "cadena", false, [...]
    */
    Array())<LineBreak>
}
void Puts():
{}
{
    /***
    * puts variable | puts "Hola mundo" | puts "me llamo #{nombre} y tengo #{edad} añazos"
    */
    <PUTS>(String()|Interpolacion()|<VAR_DECLARATION>)<LineBreak>
}
void For():
{}
{
    /***
    * for i in 10|[var,"hola",3,false]|"texto" | for i in array|string variable
    */
    <FOR><VAR_DECLARATION><IN>(<NUMBER>|String()|<VAR_DECLARATION>|Array())<LineBreak>
        Code()
    <END><LineBreak>
}
